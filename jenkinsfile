#!groovy

properties([disableConcurrentBuilds()])

pipeline {
    agent {
         label 'ubuntu16' 
         }

    stages {
        stage('Build') {
            steps {
                echo 'Building..' 
                
                sh 'cmake cpp/example1/ '
                    
                sh 'make'
              
                sh './main'
                
            }
        }
        stage('constructing a package') {
            steps {
                sh 'mkdir package_folder'
                sh 'mkdir package_folder/DEBIAN'
                sh 'mkdir package_folder/usr'
                sh 'mkdir package_folder/usr/bin'
                sh 'mkdir package_folder/DEBIAN/control'
                sh 'cat >> ./package_folder/DEBIAN/control << EOF\n Package: test-main \n Vesion: 1.0-1\n Section: misc\n Architecture: all\n Depends: bash\n Maintainer: Max max@mail.com\n Decription: test package  EOF'
                sh 'fakeroot dpkg-deb --build package_folder'
                sh 'lintian package_folder.deb'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
